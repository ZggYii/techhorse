<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Button background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#9A7BC8"
                        android:endColor="#B19CD9"
                        android:angle="270" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="#D4C4E8" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#80B19CD9" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#30000000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Button background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#C8B5E0"
                        android:endColor="#B19CD9"
                        android:angle="270" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="#E0D4F0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>