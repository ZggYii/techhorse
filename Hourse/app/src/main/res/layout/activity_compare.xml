<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- 标题栏 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="机型比较"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- 手机选择区域 -->
    <LinearLayout
        android:id="@+id/ll_phone_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">

        <!-- 第一个手机选择框 -->
        <LinearLayout
            android:id="@+id/ll_phone_1_selector"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:background="@drawable/selector_card_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_phone_1_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_add"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tv_phone_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="compare to"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:textStyle="italic|bold"/>

        </LinearLayout>

        <!-- 第二个手机选择框 -->
        <LinearLayout
            android:id="@+id/ll_phone_2_selector"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:background="@drawable/selector_card_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_phone_2_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_add"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tv_phone_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="compare with"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:textStyle="bold|italic"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 提示文本 -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择两款手机进行比较"
        android:textSize="14sp"
        android:textColor="#999999"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="15dp" />

    <!-- 比较结果区域 -->
    <LinearLayout
        android:id="@+id/ll_compare_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <!-- TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#666666"
            app:tabSelectedTextColor="#B19CD9"
            app:tabIndicatorColor="#B19CD9"
            app:tabIndicatorHeight="3dp"
            android:layout_marginBottom="10dp" />

        <!-- ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />



    </LinearLayout>

</LinearLayout>