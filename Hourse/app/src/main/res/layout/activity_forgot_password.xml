<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/ll_title_bar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 返回箭头 -->
        <ImageView
            android:id="@+id/forgot_password_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- 标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 帮助按钮 -->
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/ll_title_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 说明文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请输入您的手机号码，我们将验证您的密保问题来帮助您找回密码"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- 手机号输入框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/phone_input_background"
                android:hint="请输入手机号码"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_marginBottom="24dp" />

            <!-- 密保问题显示 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密保问题"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_security_question"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/phone_input_background"
                android:text="请先输入手机号码获取密保问题"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp" />

            <!-- 密保答案输入框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密保答案"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_security_answer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/phone_input_background"
                android:hint="请输入密保问题的答案"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="48dp" />

            <!-- 确认按钮 -->
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/login_button_background"
                android:stateListAnimator="@null"
                android:enabled="false" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>