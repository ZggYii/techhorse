<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical"
    tools:context=".PhoneDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:clipToPadding="false">

        <!-- 手机图片 -->
        <ImageView
            android:id="@+id/iv_phone_detail_image"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:src="@mipmap/icon_iphone"
            android:scaleType="centerCrop"
            android:contentDescription="手机图片"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp" />

        <!-- 手机基本信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:paddingHorizontal="8dp">

            <!-- 手机名称 -->
            <TextView
                android:id="@+id/tv_phone_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="start"
                android:letterSpacing="0.02"
                android:text="手机名称"
                android:textColor="#4A5568"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#F56500"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_phone_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#B19CD9" />

            </LinearLayout>

        </LinearLayout>

        <!-- 选项卡和内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="10dp">

            <!-- TabLayout -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="#666666"
                app:tabSelectedTextColor="#B19CD9"
                app:tabIndicatorColor="#B19CD9"
                app:tabIndicatorHeight="3dp"
                android:layout_marginBottom="10dp" />

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>