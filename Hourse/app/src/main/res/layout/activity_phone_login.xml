<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 顶部标题栏 -->
    <ImageView
        android:id="@+id/login_back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_title" />


    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帮助"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_title" />

    <!-- 登录方式标题 -->
    <TextView
        android:id="@+id/tv_login_method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号登录"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 手机号输入区域 -->
    <LinearLayout
        android:id="@+id/ll_phone_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/phone_input_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_method_title">

        <!-- 国家代码选择器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/light_divider"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <!-- 手机号输入框 -->
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入手机号"
            android:textColorHint="@color/light_text_secondary"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="phone"
            android:maxLines="1" />

    </LinearLayout>


    <!-- 验证并登录按钮 -->
    <Button
        android:id="@+id/btn_verify_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="验证并登录"
        android:textColor="@color/light_text_secondary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/login_button_background"
        android:stateListAnimator="@null"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_phone_input" />

    <!-- 用户协议 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_verify_login">

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_background" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我已阅读并同意《用户协议》《隐私政策》《未成年人个人信息保护规则》"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- 第三方登录 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_agreement"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp">

        <!-- QQ登录 -->
        <ImageView
            android:id="@+id/iv_qq_login"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_qq" />

        <!-- weibo登录 -->
        <ImageView
            android:id="@+id/iv_weibo_login"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_weibo" />

        <!-- wechat登录 -->
        <ImageView
            android:id="@+id/iv_wechat_login"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_wechat" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
