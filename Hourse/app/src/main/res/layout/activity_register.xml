<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 顶部标题栏 -->
    <ImageView
        android:id="@+id/register_back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#4A5568"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 手机号输入区域 -->
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:hint="请输入手机号"
        android:textColorHint="@color/light_text_secondary"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_title" />

    <!-- 密码输入区域 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:hint="请输入密码"
        android:textColorHint="@color/light_text_secondary"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone_number" />

    <!-- 再次输入密码区域 -->
    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:hint="请再次输入密码"
        android:textColorHint="@color/light_text_secondary"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 确认按钮 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="注册"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/premium_button_background"
        android:stateListAnimator="@null"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />

    <!-- 用户协议 -->
    <LinearLayout
        android:id="@+id/ll_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm">

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="100dp"
            android:gravity="center"
            android:button="@drawable/checkbox_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意用户协议和隐私政策"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>