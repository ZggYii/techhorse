<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/menu_item_background">

    <!-- 弹框标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置密保问题"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 密保问题选择/输入区域 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密保问题"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_security_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 自定义问题输入框 -->
    <EditText
        android:id="@+id/et_custom_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:hint="或者输入自定义问题"
        android:textColorHint="@color/light_text_secondary"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- 密保答案输入区域 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密保答案"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_security_answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/phone_input_background"
        android:hint="请输入密保问题的答案"
        android:textColorHint="@color/light_text_secondary"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="24dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/premium_button_background"
            android:layout_marginEnd="40dp"
            android:stateListAnimator="@null"
            android:elevation="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_security"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/premium_button_background"
            android:layout_marginStart="8dp"
            android:stateListAnimator="@null"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>