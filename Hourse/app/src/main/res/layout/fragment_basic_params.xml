<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- RAM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RAM"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_ram_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8GB"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="3"
                android:gravity="end" />

        </LinearLayout>

        <!-- ROM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ROM"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_rom_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="256GB"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="3"
                android:gravity="end" />

        </LinearLayout>

        <!-- 屏幕尺寸 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="屏幕尺寸"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_screen_size_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6.1英寸"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="3"
                android:gravity="end" />

        </LinearLayout>

        <!-- 前置摄像头 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="前置摄像头"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_front_camera_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12MP"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="3"
                android:gravity="end" />

        </LinearLayout>

        <!-- 后置摄像头 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="后置摄像头"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_rear_camera_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="48MP 三摄"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="3"
                android:gravity="end" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>