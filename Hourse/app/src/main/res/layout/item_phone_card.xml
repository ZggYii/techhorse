<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- 手机图片 -->
        <ImageView
            android:id="@+id/iv_phone_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/icon_iphone"
            android:scaleType="centerCrop"
            android:background="@drawable/phone_image_background"
            android:contentDescription="手机图片" />

        <!-- 手机信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- 手机名称 -->
            <TextView
                android:id="@+id/tv_phone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro"
                android:textColor="#4A5568"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 手机特点 -->
            <TextView
                android:id="@+id/tv_phone_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="¥7999"
                android:textColor="#B19CD9"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 手机核心配置 -->
            <TextView
                android:id="@+id/tv_phone_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="A17 Pro芯片"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
