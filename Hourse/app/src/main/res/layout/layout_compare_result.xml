<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/phone_image_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp">


    <!-- 价格对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="¥8999"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="¥7999"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 内存配置对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RAM | ROM"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_memory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="128GB"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_memory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="256GB"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 前置摄像头对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="前置摄像头"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_front_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12MP"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_front_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12MP"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 后置摄像头对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="后置摄像头"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_rear_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="48MP 三摄"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_rear_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="50MP 三摄"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 屏幕分辨率对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分辨率"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_screen_resolution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2556×1179"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_screen_resolution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3120×1440"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>


    <!-- 屏幕尺寸对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="屏幕尺寸"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_screen_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6.1英寸"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_screen_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6.8英寸"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 卖点对比 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="卖点"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_phone1_selling_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A17 Pro芯片，钛金属设计"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_phone2_selling_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="S Pen支持，200MP摄像头"
            android:textSize="13sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/selector_card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>